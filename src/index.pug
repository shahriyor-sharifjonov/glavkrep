mixin fastener-item-1()
    a(href="#!").fastener-catalog__item
        .fastener-catalog__item-img
            img(src="@img/fastener-1.png", alt="" draggable="false")
        div 
            p.fastener-catalog__item-title Анкеры
            p.fastener-catalog__item-p 3500 + товаров


